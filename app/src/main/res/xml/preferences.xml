<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:summary="%s"
        android:defaultValue="@string/default_dificultad"
        android:entries="@array/titulos_dificultades"
        android:entryValues="@array/valores_dificultades"
        android:key="@string/titulo_dificultad"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/titulo_dificultad"
        android:icon="@android:drawable/ic_menu_edit" />
    <ListPreference
        android:summary="%s"
        android:defaultValue="@string/default_voz"
        android:entries="@array/titulos_voz"
        android:entryValues="@array/valores_voz"
        android:key="@string/titulo_voz"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/titulo_voz"
        android:icon="@drawable/ic_parlante" />
    <ListPreference
        android:defaultValue="@string/default_tiempo"
        android:summary="%s"
        android:key="@string/titulo_tiempo"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:entries="@array/titulos_tiempo"
        android:entryValues="@array/valores_tiempo"
        android:title="@string/titulo_tiempo"
        android:icon="@android:drawable/ic_lock_idle_alarm"></ListPreference>
    <Preference
        android:key="@string/titulo_imagenes"
        android:title="@string/titulo_imagenes"
        android:icon="@android:drawable/ic_menu_gallery">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.example.usuario.memoria"
            android:targetClass="com.example.usuario.memoria.GridViewActivity" />

    </Preference>
</PreferenceScreen>